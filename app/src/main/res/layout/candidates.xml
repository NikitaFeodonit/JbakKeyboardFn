<com.jbak.JbakKeyboard.JbCandView xmlns:android="http://schemas.android.com/apk/res/android"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:background="#aaaaaa"
    >

    <TextView
        android:id="@+id/cand_left"
        android:background="@drawable/cand_add_vocab_background"
        android:includeFontPadding="false"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:drawableLeft="@drawable/cand_plus_icon"
        android:layout_alignParentLeft="true"
        android:drawablePadding="2dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/completions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left"
        android:layout_toRightOf="@id/cand_left"
        />

    <ImageView
        android:id="@+id/cand_right"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/cand_arrow_icon"
        android:background="@drawable/cand_add_vocab_background"
        android:gravity="center"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        />

</com.jbak.JbakKeyboard.JbCandView>